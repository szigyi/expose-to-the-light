<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%-72(%d{yyyy-MM-dd HH:mm:ss.SSS} [%magenta(%thread)]) %highlight(%.-1level) %cyan(%-35(%logger{35})) %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.http4s.server.blaze" level="info"/>
    <logger name="org.http4s.blaze.channel" level="warn"/>
    <logger name="org.http4s.blaze.pipeline" level="error"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>